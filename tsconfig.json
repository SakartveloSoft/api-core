{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "js",
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules"
  ]
}